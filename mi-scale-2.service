[Unit]
Description = Get Xiaomi Mi Smart Scale 2 weight, save and access the graph
After = network.target
StartLimitIntervalSec = 0

[Service]
Type = simple
Restart = always
RestartSec = 5
User = root
ExecStart = /usr/bin/bash /home/pohy/mi-scale-2/start.sh
TimeoutStartSec = 10

[Install]
WantedBy = multi-user.target
RequiredBy = network.target
